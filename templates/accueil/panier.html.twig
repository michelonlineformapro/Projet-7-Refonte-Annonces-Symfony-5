{% extends 'base.html.twig' %}

{% block title %}Annonces SF5 -Panier-{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Produit</th>
            <th scope="col">Prix</th>
            <th scope="col">Quantité</th>
            <th scope="col">Total</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
        <tr>
            <th scope="row">{{ element.annonce.nomAnnonces }}</th>
            <td>{{ element.annonce.prixAnnonces }}</td>
            <td>{{ element.quantite }}</td>
            <td>{{ element.quantite * element.annonce.prixAnnonces }} €</td>
            <td>
                <a href="{{ path('ajouter_panier',{id: element.annonce.id}) }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                </a>
                <a href="{{ path('enlever_panier',{id: element.annonce.id}) }}" class="btn btn-warning">
                    <i class="fa fa-minus-circle"></i>
                </a>
                <a href="{{ path('supprimer_panier',{id: element.annonce.id}) }}" class="btn btn-danger">
                    <i class="fa fa-times"></i>
                </a>
            </td>
        </tr>
        {% else %}
            <tr>
                <td class="text-center"><h4 class="text-danger text-center">Votre panier est vide</h4></td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td><p class="text-info">TOTAL:  {{ total }} €</p></td>
                <td>
                    <a href="{{ path('supprimer_tous_panier') }}" class="btn btn-outline-danger">Annuler la commande</a>
                </td>
                <td>
                    <a href="" class="btn btn-outline-success">Valider la commande</a>
                </td>
            </tr>
        </tfoot>
    </table>



{% endblock %}